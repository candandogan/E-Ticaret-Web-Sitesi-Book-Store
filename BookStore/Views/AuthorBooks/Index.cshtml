@model IEnumerable<BookStore.Models.AuthorBook>

@{
    ViewData["Title"] = "Index";
}

<h1>KİTAPLAR VE YAZARLARI</h1>

<p>
    <a asp-action="Create">Yeni Kitap-Yazar Eşleştirmesi</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem =>  item.Author.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthorId" class="btn btn-success">Güncelle</a> |
                <a asp-action="Details" asp-route-id="@item.AuthorId" class="btn btn-primary">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.AuthorId" class="btn btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
