
@model IEnumerable<Book>
@{
    ViewData["Title"] = "Basım Dili";
    var count = 0;
}

<div class="row">
    @foreach (var book in Model)
    {
        @if (count != 0 && count % 4 == 0)
        {
        @:</div>
        @:<div class="row">
        }
        <div class="col-3">
            <partial name="_BookCard" model="@book" />
        </div>
        count++;
    }
</div>

<ul class="pagination">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <li class="page-item">
            <a class="page-link" asp-action="Languages" asp-controller="Home" asp-route-page="@i"
               asp-route-languageId="@ViewBag.LanguageId">@i</a>
        </li>
    }
</ul>


