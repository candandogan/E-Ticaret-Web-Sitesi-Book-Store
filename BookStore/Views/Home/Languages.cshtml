@model BookStore.Models.Language

@{
    ViewData["Title"] = "Brands";
}

<h1>BASIM DİLLERİ</h1>
<form asp-action="LanguagesSelect">
    <div class="form-group">
        @*<label asp-for="BrandId" class="control-label"></label>*@
        <select asp-for="LanguageId" class="form-control" asp-route-languageId="LanguageId" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Languages"></select>
        <span asp-validation-for="LanguageId" asp-route-languageId="LanguageId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Ara" class="btn btn-success" />
    </div>
</form>