@model BookStore.Models.AuthorBook

@{
    ViewData["Title"] = "Authors";
}

<h1>YAZARLAR</h1>
<form asp-action="AuthorsForSelect">
    <div class="form-group">

        <select asp-for="AuthorId" class="form-control" asp-route-authorId="AuthorId" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Authors"></select>
        <span asp-validation-for="AuthorId" asp-route-authorId="AuthorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Ara" class="btn btn-success" />
    </div>
</form>