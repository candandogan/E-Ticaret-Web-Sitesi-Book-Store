@model BookStore.Models.GenreBook

@{
    ViewData["Title"] = "Sil";
}

<h1>Sil</h1>

<h3>Bunu silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Kitap-Tür</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.ImageURL)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" asp-for="GenreId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Anasayfaya geri dön</a>
    </form>
</div>
